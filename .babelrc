{
    "presets": [
        ["@babel/preset-env", { 
            "targets": { 
                "node": "current" 
            } 
        }]
    ],
    "retainLines": true,
    "plugins": [
        ["@babel/plugin-proposal-decorators", { "legacy": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }],
        "@babel/plugin-syntax-dynamic-import",
        "@babel/plugin-transform-react-jsx",
        "transform-dynamic-import",
        ["module-resolver", {
            "alias": {
                "app": "./src",
                "env": "./env",
                "chimera-ui": "./assets"
            }
        }]
    ]
}